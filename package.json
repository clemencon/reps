{
	"name": "@clemencon/reps",
	"version": "1.0.0",
	"description": "CLI flashcard app.",
	"author": "Julien ClÃ©menÃ§on",
	"license": "GPL-3.0",
	"type": "module",
	"engines": {
		"node": ">=22.0.0"
	},
	"bin": {
		"reps": "dist/main.js"
	},
	"files": [
		"dist"
	],
	"scripts": {
		"check": "biome check && tsc --project tsconfig.test.json && vitest run --coverage",
		"build": "biome check && tsc --project tsconfig.test.json && vitest run && vitest run --coverage && rm -rf dist && tsc && vitest run --config vitest.e2e.config.ts",
		"fix": "biome check --write .",
		"test": "vitest",
		"coverage": "vitest run --coverage",
		"e2e": "vitest run --config vitest.e2e.config.ts",
		"graph": "depcruise src --include-only \"^src\" --output-type dot --no-config | dot -T svg > dependency-graph.svg",
		"prepublishOnly": "npm run build"
	},
	"publishConfig": {
		"access": "public"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.11",
		"@faker-js/faker": "10.2.0",
		"@types/better-sqlite3": "7.6.13",
		"@types/node": "25.0.3",
		"@vitest/coverage-v8": "4.0.16",
		"dependency-cruiser": "17.3.7",
		"memfs": "4.56.10",
		"typescript": "5.9.3",
		"vitest": "4.0.16"
	},
	"dependencies": {
		"@inquirer/prompts": "8.2.0",
		"better-sqlite3": "12.5.0",
		"dedent": "1.7.1"
	}
}
