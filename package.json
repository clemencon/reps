		"@types/node": "25.0.3",
		"@vitest/coverage-v8": "4.0.16",
		"dedent": "1.7.1",
		"memfs": "4.56.10",
		"typescript": "5.9.3",
		"vitest": "4.0.16"
	},
	"dependencies": {
		"@inquirer/prompts": "8.2.0",
		"better-sqlite3": "12.5.0"
	}
