{
	"name": "reps",
	"private": true,
	"version": "0.0.0",
	"description": "A CLI flashcard app.",
	"author": "Julien Clémençon",
	"license": "GPL-3.0",
	"type": "module",
	"engines": {
		"node": "24.12.0"
	},
	"scripts": {
